{
  "name": "@24vlh/ts-helpers",
  "version": "1.0.1",
  "description": "Small footprint library that helps with repetitive tasks.",
  "author": "@vlah.io",
  "license": "Apache-2.0",
  "keywords": [
    "typescript",
    "helpers"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/24vlh/ts-helpers"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.json",
    "index:refresh": "node ./.24vlh/scan.js && git add ./src/index.ts",
    "lint": "npx eslint src/**/*.ts --fix",
    "prepare": "husky init",
    "prepublishOnly": "npm run build",
    "prettify": "npx prettier src/**/*.ts --write",
    "test": "npx jest --logHeapUsage"
  },
  "lint-staged": {
    "*.ts": [
      "npm run index:refresh",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@24vlh/ts-assert": "^1.0.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.1",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sonarjs": "^1.0.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  }
}
