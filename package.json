{
  "name": "@24vlh/ts-helpers",
  "version": "1.0.8",
  "description": "Small footprint library that helps with repetitive tasks.",
  "author": "@vlah.io",
  "license": "Apache-2.0",
  "keywords": [
    "typescript",
    "helpers"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/24vlh/ts-helpers"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.json",
    "index:refresh": "node ./.24vlh/scan.js && git add ./src/index.ts",
    "lint": "npx eslint src/**/*.ts --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "prettify": "npx prettier src/**/*.ts --write",
    "test": "npx jest --logHeapUsage"
  },
  "lint-staged": {
    "*.ts": [
      "npm run index:refresh",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@24vlh/ts-assert": "^1.0.17"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
